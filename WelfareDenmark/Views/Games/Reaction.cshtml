    <div>
        <button id="startButton" value="start" style="width: 400px; height: 400px; position:absolute; top: 40%; left: 35%; font-size : 100px; ">
        </button>
        <div id="timeDisplay"></div>
    </div>
    <script src="~/js/reaction.js" ></script>

