@{
    ViewBag.Title = "Reaction Game";
    Layout = "_Layout";
}
<style>
.stopped{
    background: #DF0C0C;
}
.stopped::before{
    content: "start";
}
.waiting{
    background: yellow;
}
.waiting::before{
    content: "get ready";
}
.ready{
    background: green;
}
.ready::before{
    content: "click!!!";
}

</style>
