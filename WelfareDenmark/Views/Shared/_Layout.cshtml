<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - WelfareDenmark</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:regular,bold,italic,thin,light,bolditalic,black,medium&amp;lang=en">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <link rel="stylesheet" href="~/lib/material-design-light/material.blue-deep_orange.min.css"/>
    <link rel="stylesheet" href="~/css/site.css"/>
</head>
<body>
<div class="mdl-layout mdl-js-layout mdl-layout--fixed-header mdl-layout--no-desktop-drawer-button">
    <partial name="_Navigation"/>
    <div class="mdl-layout__content">
        @RenderBody()
    </div>
</div>
@RenderSection("Scripts", false)
<script>
    // Getting only the links that are in .navigation

    var links = document.querySelectorAll('.mdl-navigation > a[href="' + window.location.pathname + '"]');
    console.log(window.location.pathname);
    links.forEach((link) => {
        link.classList.add("mdl-navigation__link--current");
    });
</script>
<script src="https://code.getmdl.io/1.3.0/material.min.js"></script>
</body>
</html>